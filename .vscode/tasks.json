{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "serve",
      "type": "shell",
      "command": "./serve.sh",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "severity": "error",
        "fileLocation": "absolute",
        "owner": "hugo",
        "pattern": {
          "regexp": "template: (.*):(\\d+): (.*)",
          "file": 1,
          "location": 2,
          "message": 3,
          "loop": true
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Change detected, rebuilding site",
          "endsPattern": "Total in \\d+ ms"
        }
      }
    }
  ]
}
